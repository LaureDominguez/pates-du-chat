<div class="log" id="register-window">
    <button class="close" id="close-register">X</button>
    <h3>Nouveau compte</h3>

    <form action="index.php?route=register" method="post">
        <div>
            <label for="email">email</label>
            <input type="email" name="email" id="email">
        </div>
        <div>
            <label for="pswd">mot de passe</label>
            <input type="password" name="pswd" id="pswd">
        </div>
        <div>
            <label for="pswd_confirm">confirmez votre mot de passe</label>
            <input type="password" name="pswd_confirm" id="pswd_confirm">
        </div>
        <div class="buttons">
            <button type="submit" class="btn" value="Valider" id="validate-register">valider</button>
            <a href=" index.php?route=login" class="btn" id="cancel">annuler</a>
        </div>
    </form>
</div>